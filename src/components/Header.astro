---
import Button from "./Button.astro";
---

<header class="header">
  <h1 class="logo">
    <a href="/">
      <img src="/images/home/logo@2x.png" />
    </a>
    <!-- ソース出し分け？ -->
    <!-- <img src="/images/home/logo.png" /> -->
  </h1>
  <nav class="nav">
    <ul>
      <li>
        <a href="/">ホーム</a>
      </li>
      <li>
        <a href="/newsIndex">お知らせ</a>
      </li>
      <li>
        <a href="/blogIndex">ブログ</a>
      </li>
      <li>
        <a href="/price">コース・料金</a>
      </li>
    </ul>
  </nav>
  <address>
    <small>平日08:00〜20:00</small>
    <p class="call">
      <img src="images/home/tell.svg" alt="" />
      <span>0123-456-7890</span>
    </p>
  </address>
  <Button title="資料請求" class="accent" />
  <Button title="お問い合わせ" class="main" />
</header>

<style>
  header {
    padding-left: 15px;
    padding-right: 10px;
    width: 100%;
    height: 80px;
    font-size: 16px;
    display: grid;
    align-items: center;
    grid-template-columns: 163px 1fr 186px 152px 137px;
  }
  .logo {
    width: 136px;
  }
  .logo img {
    width: 100%;
  }
  address {
    text-align: right;
    margin-right: 23px;
  }
  .call {
    margin-top: 5px;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 5px;
    justify-content: flex-end;
  }
  .call img {
  }
  .call span {
  }
  nav ul {
    display: flex;
    justify-content: flex-start;
    list-style: none;
    padding-inline: 0;
    gap: 16px;
    font-weight: bold;
  }
  .nav {
  }
  .nav a {
  }
</style>
