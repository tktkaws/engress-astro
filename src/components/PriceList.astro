  }
  .card {
    width: 220px;
  }
  .card--orange {
    width: 220px;
    margin-top: -24px;
  }
  .card-title {
    background: #1b224c;
    color: white;
    font-size: 16px;
    line-height: 1.5;
    padding: 16px;
    text-align: center;
  }
  .card-title--orange {
    background: #f5a623;
    color: white;
    font-size: 16px;
    line-height: 1.5;
    padding: 16px;
    text-align: center;
  }
  .card-body {
    border: solid 1px;
    border-top: none;
    height: 444px;
  }
  .card-price {
    font-size: 24px;
    font-weight: bold;
    padding: 16px;
    position: relative;
    margin-bottom: 32px;
    text-align: center;
  }
  .card-price::after {
    content: "*月額（税抜価格）";
    position: absolute;
    bottom: -16px;
    left: 40px;
    font-size: 16px;
    font-weight: normal;
  }
  .card-desc {
    margin-left: 24px;
    padding: 16px;
    position: relative;
  }
  .card-desc::before {
    content: "";
    position: absolute;
    top: 16px;
    left: 0;
    transform: translate(-50%, -50%);
  }
  .card-desc::before {
    width: 8px;
    height: 14px;
    border-width: 0 2px 2px 0;
    border-style: solid;
    border-color: transparent #333 #333 transparent;
    transform: rotate(45deg);
  }
  .card-desc--none {
    margin-left: 24px;
  }
</style>
