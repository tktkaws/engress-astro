<style>
  section {
    display: grid;
    grid-template-columns: 1fr 900px 1fr;
    padding-bottom: 36px;
  }
  section > * {
    grid-column: 2;
  }
  .title {
    font-size: 36px;
    font-weight: bold;
    margin-top: 40px;
    margin-bottom: 40px;
    text-align: center;
  }
  ul {
    display: flex;
    justify-content: space-between;
    list-style: none;
    padding: 0;
