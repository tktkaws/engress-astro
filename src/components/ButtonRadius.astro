---
const { title, class } = Astro.props;
---
<button class:list={["button", Astro.props.class]}>
  <a href="/contact.html">{title}</a>
</button>
<style lang="scss">
  button {
    color: $c-background;
    border-radius: 25px;
    padding: 8px 16px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
  }
  .hero {
    width: 260px;
    height: 60px;
    background-color: $c-accent;
    border-radius: 31px;
  }
  .strength {
    background-color: transparent;
    border: solid 1px;
    height: 50px;
    width: 200px;
    font-weight: normal;
  }
  .cta {
    background-color: $c-accent;
    width: 280px;
    height: 50px;
  }
</style>
