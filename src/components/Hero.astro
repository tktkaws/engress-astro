const { title, imgSrc } = Astro.props;
---

<section class="Hero">
  <img src={imgSrc} />
  <h2 class="title">{title}</h2>
</section>

<style>
  section {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 221px;
  }
  section img {
    grid-row: 1;
    grid-column: 1;
    width: 100%;
    height: 100%;
    position: relative;
    object-fit: cover;
  }
  .title {
    color: white;
    font-weight: bold;
    font-size: 32px;
    grid-column: 1/1;
    grid-row: 1/1;
    grid-row: 1;
    grid-column: 1;
    z-index: 1;
    position: relative;
    padding: 20px;
    justify-self: center;
    align-self: center;
    text-align: center;
  }
</style>
