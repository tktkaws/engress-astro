<style lang="scss">
  section {
    display: grid;
    grid-template-columns: 1fr 900px 1fr;
    @media only screen and (max-width: 1000px) {
      grid-template-columns: 1fr 90% 1fr;
    }
  }
  section > * {
    grid-column: 2;
  }
  article {
    margin-top: 60px;
    margin-bottom: 60px;
  }
  article > * + * {
    margin-top: 30px;
  }
  article h1 {
    font-size: fluid(20, 28, 320, 767);
    font-weight: bold;
  }
  .news-date {
    text-align: right;
  }
  article .caption {
    width: min(100%, 400px);
    aspect-ratio: 400/250;
  }
  article .caption img {
    width: 100%;
    height: 100%;
  }
  article h2 {
    margin-top: 40px;
    font-size: fluid(18, 26, 320, 767);
    font-weight: bold;
  }
  article h3 {
    font-size: fluid(16, 22, 320, 767);
    font-weight: bold;
    border-left: solid 3px;
    padding-left: 8px;
  }
  article p {
  }
  article blockquote {
    padding: 16px;
    padding-left: 74px;
    padding-bottom: 36px;
    background: $c-sub;
    position: relative;
  }
  article blockquote p {
    position: relative;
  }
  article blockquote::before {
    content: " “ ";
    display: block;
    position: absolute;
    top: 0;
    left: 16px;
    font-size: 90px;
    color: $c-sub-quate;
  }
  article .list-item {
    list-style: none;
    padding-left: 36px;
    position: relative;
  }
  article .list-item::before {
    content: "";
    display: block;
    position: absolute;
    left: 0;
    top: 20%;
    color: $c-accent;
    background-color: $c-accent;
    border: solid 1px;
    width: 11px;
    height: 11px;
    border-radius: 50%;
  }
  article .link {
    color: $c-accent;
    text-decoration: underline;
  }
</style>
